<div class="layout">
  <div class="recipe-submit-button mt-5 mb-5">
    <%= link_to list_moods_path, class: "to_shoplist-button" do %>
      GO
    <% end %>
  </div>
  <div class="last-mood-title mt-3">
    <h2>Mes derniers moods</h2>
  </div>
  <div class="conditions-list">
    <% @conditions.each do |condition|  %>
      <div class="condition-item">
        <%= condition.created_at.strftime('%d %b %Y') %>
        <% condition.symptoms.each do |symptom| %>
          <%= symptom.name %>
        <% end %>
        <%= condition.mood.name %>
      </div>
    <% end %>
  </div>
</div>
<h1>Menu</h1>
