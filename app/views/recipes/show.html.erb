<% content_for :meta_title, "Comment cuisiner  #{@recipe.name} ?" %>
<% content_for :meta_description, "Nutrimood, app incroyable pour savoir comment mieux manger" %>
<% content_for :navbar do %>
  <%= render 'shared/navbar_green' %>
<% end %>
<div class="layout-white">
  <div class="recipe-card">
    <div class="recipe-img" style="background-image: url(<%= @recipe.image %>)">
    </div>
    <div class="text-content">
      <div class="recipe-title-green">
        <%= @recipe.name %>
      </div>
      <div class="recipe-tips">
        <%= link_to recipe_infos_path(@recipe) do %>
          <div class="anecdote-bloc">
            <div class="anecdote">
              <div class="pourquoi-green">
                <% ingredients_by_symptoms = @recipe.ingredients_by_symptoms.sample %>
                pourquoi le <%= ingredients_by_symptoms.ingredient.name %> ?
              </div>
              <div class="anecdote-content-green">
                <%= ingredients_by_symptoms.anecdote %>
              </div>
              <div class="plus-infos-green mt-3">
                <i class="fa-solid fa-circle-info"></i> Pour plus d'infos
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="buttons-bloc d-flex">
    <div style="color:#17BEBB;">
      <%= link_to shop_list_path(@recipe), class: "to_shoplist-button-green" do %>
        Shoplist
      <% end %>
    </div>
    <div style="color:#17BEBB;">
      <%= link_to recipe_infos_path(@recipe), class: "to_shoplist-button-green" do %>
        Infos
      <% end %>
    </div>
    <div style="color:#17BEBB;">
      <%= link_to recipe_steps_path(@recipe), class: "to_shoplist-button-green" do %>
        Etapes
      <% end %>
    </div>
  </div>
</div>
