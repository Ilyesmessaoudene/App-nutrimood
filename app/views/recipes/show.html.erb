<% content_for :meta_description, "Nutrimood, app incroyable pour savoir comment mieux manger" %>

<% @recipe.recipes_ingredients.each do |recipes_ingredient| %>
  <div class="ingredient-checkbox">
    <input type="checkbox" id="<%= recipes_ingredient.ingredient.id %>" name="<%= recipes_ingredient.ingredient.name %>" unchecked>
    <% if recipes_ingredient.unit %>
      <%= recipes_ingredient.quantity %>
      <%= recipes_ingredient.unit %>
      <%= recipes_ingredient.ingredient.name %>
    <% else %>
      <%= recipes_ingredient.ingredient.name %>
    <% end %>
  </div>
<% end %>
  <div class="recipe-submit-button mt-5">
  <%= link_to show_detailed_path(@recipe), class: "to_shoplist-button" do %>
    <i class="fa-solid fa-check"></i>J'AI TOUT
  <% end %>
  </div>
