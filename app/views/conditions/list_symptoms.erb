
<div class="layout">
  <div class="symptoms-list">

    <form action="list_symptoms" method="POST" data-turbo=false>
      <option value="selected_symptoms">
        <% @symptoms.each do |s| %>

          <div class="symptom-item">

          <label> <%= s.name %>
              <input type="checkbox" name="<%= s.name %>" value="<%= s.id %>" visibility: hidden />
          </label>


          </div>

        <% end %>
      </option>

      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <input type="submit" value="Suivant" class="suivant" />
    </form>

  </div>
</div>
