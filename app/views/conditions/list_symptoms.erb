
<div class="layout">

  <div class="symptoms-list">
    <form action="list_symptoms" method="POST">
      <option value="selected_symptoms">
        <% @symptoms.each do |s| %>

          <div class="symptom-item">
          <label for="symptom<%= s.id %>"><%= s.name %></label>
          <input type="checkbox" id="symptom<%= s.name %>" name="<%= s.name %>" value="<%= s.id %>" />
          </div>

        <% end %>
      </option>
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <input type="submit" value="Suivant" class="suivant" />
    </form>
  </div>

</div>
