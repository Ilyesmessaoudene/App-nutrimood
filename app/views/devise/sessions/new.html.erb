<div class="layout">
  <div class="sign_in p-2">
    <%= link_to new_user_session_path, class: "google_oauth_link" do %>
      <div class="google_oauth mt-3">
        <i class="fa-brands fa-google"></i>Se connecter avec Google
      </div>
    <% end %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs mt-4">
        <%= f.input :email,
                required: false,
                autofocus: true,
                placeholder: "mail@domain.com",
                input_html: { autocomplete: "email", class: "login-input" } %>
        <%= f.input :password,
                required: false,
                label: "Mot de passe",
                placeholder: "Min. 8 caractères",
                input_html: { autocomplete: "current-password", class: "login-input" } %>
        <div class="remember_form d-flex justify-content-between">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "login-button" %>
      </div>
    <% end %>
    <div class="subscribe mt-3">
      Pas encore inscrit ? <%= link_to "S'inscrire", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
<h1>Connecte toi !</h1>
